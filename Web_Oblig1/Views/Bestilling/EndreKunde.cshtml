@model Web_Oblig1.Models.Kunde
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EndreKunde</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal col-md-8">
        <h4>Kunde</h4>
        <hr />
        <table id="endrekundetable" >
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.kundeID)

            <tr class="form-group" >
                <td>@Html.LabelFor(model => model.fornavn, htmlAttributes: new { @class = "control-label col-md-2"}) </td>
                <td>
                    @Html.EditorFor(model => model.fornavn, new { htmlAttributes = new { @class = "form-control", @pattern = "[a-zæøåA-ZÆØÅ]{2,30}", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.fornavn, "", new { @class = "text-danger" })
                </td>
            </tr>

            <tr class="form-group">
                <td>@Html.LabelFor(model => model.etterNavn, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                <td>
                    @Html.EditorFor(model => model.etterNavn, new { htmlAttributes = new { @class = "form-control", @pattern = "[a-zæøåA-ZÆØÅ]{2,30}", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.etterNavn,"", new { @class = "text-danger" })
                </td>
            </tr>

            <tr class="form-group">
                <td>@Html.LabelFor(model => model.adresse, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                <td>
                    @Html.EditorFor(model => model.adresse, new { htmlAttributes = new { @class = "form-control", @pattern = "[a-zæøåA-ZÆØÅ0-9]{2,50}", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.adresse, "", new { @class = "text-danger" })
                </td>
            </tr>
        </table>
        <br/>
        <br/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lagre" class="btn btn-success" />
                @Html.ActionLink("Avbryt", "visProfil", new { kundeid = Model.kundeID }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
